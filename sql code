
CREATE DATABASE MerchantNavyPortal;
USE MerchantNavyPortal;


CREATE TABLE Users (
    UserID INT PRIMARY KEY AUTO_INCREMENT,
    Username VARCHAR(50) NOT NULL UNIQUE,
    Password VARCHAR(255) NOT NULL,
    Email VARCHAR(100) NOT NULL UNIQUE,
    FullName VARCHAR(100) NOT NULL,
    UserType VARCHAR(20) NOT NULL CHECK (UserType IN ('Seafarer', 'Admin', 'Recruiter')),
    PhoneNumber VARCHAR(20),
    Address VARCHAR(255),
    ProfilePicture VARCHAR(255),
    CreatedAt DATETIME DEFAULT CURRENT_TIMESTAMP,
    LastLogin DATETIME
);

CREATE TABLE Companies (
    CompanyID INT PRIMARY KEY AUTO_INCREMENT,
    CompanyName VARCHAR(100) NOT NULL,
    Description TEXT,
    Logo VARCHAR(255),
    Website VARCHAR(255),
    ContactEmail VARCHAR(100),
    ContactPhone VARCHAR(20),
    Address VARCHAR(255),
    RecruiterID INT,
    FOREIGN KEY (RecruiterID) REFERENCES Users(UserID)
);


CREATE TABLE Ships (
    ShipID INT PRIMARY KEY AUTO_INCREMENT,
    ShipName VARCHAR(100) NOT NULL,
    ShipType VARCHAR(50) NOT NULL,
    CompanyID INT,
    Capacity INT,
    YearBuilt INT,
    Flag VARCHAR(50),
    Description TEXT,
    FOREIGN KEY (CompanyID) REFERENCES Companies(CompanyID)
);


CREATE TABLE ShipSchedules (
    ScheduleID INT PRIMARY KEY AUTO_INCREMENT,
    ShipID INT,
    DeparturePort VARCHAR(100) NOT NULL,
    ArrivalPort VARCHAR(100) NOT NULL,
    DepartureDate DATETIME NOT NULL,
    ArrivalDate DATETIME NOT NULL,
    Status VARCHAR(50) DEFAULT 'Scheduled',
    FOREIGN KEY (ShipID) REFERENCES Ships(ShipID)
);

CREATE TABLE Jobs (
    JobID INT PRIMARY KEY AUTO_INCREMENT,
    JobTitle VARCHAR(100) NOT NULL,
    CompanyID INT,
    ShipID INT,
    Description TEXT,
    Requirements TEXT,
    Salary DECIMAL(10, 2),
    Location VARCHAR(100),
    JobType VARCHAR(50),
    ExperienceRequired INT,
    PostedDate DATETIME DEFAULT CURRENT_TIMESTAMP,
    ClosingDate DATETIME,
    Status VARCHAR(20) DEFAULT 'Open',
    FOREIGN KEY (CompanyID) REFERENCES Companies(CompanyID),
    FOREIGN KEY (ShipID) REFERENCES Ships(ShipID)
);

CREATE TABLE Applications (
    ApplicationID INT PRIMARY KEY AUTO_INCREMENT,
    JobID INT,
    UserID INT,
    ApplicationDate DATETIME DEFAULT CURRENT_TIMESTAMP,
    Status VARCHAR(50) DEFAULT 'Pending',
    Resume VARCHAR(255),
    CoverLetter TEXT,
    FOREIGN KEY (JobID) REFERENCES Jobs(JobID),
    FOREIGN KEY (UserID) REFERENCES Users(UserID)
);

CREATE TABLE SeafarerProfiles (
    ProfileID INT PRIMARY KEY AUTO_INCREMENT,
    UserID INT UNIQUE,
    Rank_ VARCHAR(50),
    YearsOfExperience INT,
    Certifications TEXT,
    Nationality VARCHAR(50),
    DateOfBirth DATE,
    PassportNumber VARCHAR(50),
    SeamanBookNumber VARCHAR(50),
    FOREIGN KEY (UserID) REFERENCES Users(UserID)
);

CREATE TABLE TrainingCourses (
    CourseID INT PRIMARY KEY AUTO_INCREMENT,
    CourseName VARCHAR(100) NOT NULL,
    Description TEXT,
    Duration VARCHAR(50),
    StartDate DATE,
    EndDate DATE,
    Location VARCHAR(100),
    Fees DECIMAL(10, 2),
    Instructor VARCHAR(100),
    MaxCapacity INT
);

CREATE TABLE CourseEnrollments (
    EnrollmentID INT PRIMARY KEY AUTO_INCREMENT,
    CourseID INT,
    UserID INT,
    EnrollmentDate DATETIME DEFAULT CURRENT_TIMESTAMP,
    Status VARCHAR(50) DEFAULT 'Enrolled',
    PaymentStatus VARCHAR(50) DEFAULT 'Pending',
    FOREIGN KEY (CourseID) REFERENCES TrainingCourses(CourseID),
    FOREIGN KEY (UserID) REFERENCES Users(UserID)
);

CREATE TABLE Messages (
    MessageID INT PRIMARY KEY AUTO_INCREMENT,
    SenderID INT,
    ReceiverID INT,
    Subject VARCHAR(100),
    MessageContent TEXT,
    SentDate DATETIME DEFAULT CURRENT_TIMESTAMP,
    IsRead BOOLEAN DEFAULT 0,
    FOREIGN KEY (SenderID) REFERENCES Users(UserID),
    FOREIGN KEY (ReceiverID) REFERENCES Users(UserID)
);





